generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DEV_DATABASE_URL")
}

model User {
  id       String @id @default(cuid())
  name     String
  username String
  password String
}

model School {
  id       String     @id @default(cuid())
  name     String
  Employee Employee[]
}

model Employee {
  id           String       @id @default(cuid())
  name         String
  schoolId     String
  school       School       @relation(fields: [schoolId], references: [id])
  jobTitle     JobTitle
  salary       Int
  workContract String
  dateOfStart  DateTime
  dateOfEnd    DateTime
  PaidSalaries PaidSalary[]
  Absence      Absence[]
  InOut        InOut[]
}

enum JobTitle {
  EDUCATION_SUPERVISOR
  HEAD_TEACHER
  TEACHER
  DATA_ENTRY
  MEDIA

}

model PaidSalary {
  id         String   @id @default(cuid())
  employeeId String
  employee   Employee @relation(fields: [employeeId], references: [id])
  paid       Int
  date       DateTime
  notes      String
}

model Absence {
  id         String   @id @default(cuid())
  employeeId String
  employee   Employee @relation(fields: [employeeId], references: [id])
  date       DateTime
  notes      String
  approved   Boolean
  attachment String
}

model InOut {
  id         String   @id @default(cuid())
  employeeId String
  employee   Employee @relation(fields: [employeeId], references: [id])
  date       DateTime
  notes      String
  in         DateTime
  out        DateTime
  attachment String
}
