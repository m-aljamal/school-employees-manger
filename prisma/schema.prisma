generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DEV_DATABASE_URL")
}

model User {
  id       String @id @default(cuid())
  name     String
  username String
  password String
}

model School {
  id       String     @id @default(cuid())
  name     String
  Employee Employee[]
}

model Employee {
  id       String   @id @default(cuid())
  name     String
  schoolId String
  school   School   @relation(fields: [schoolId], references: [id])
  jobTitle JobTitle
}

enum JobTitle {
  EDUCATION_SUPERVISOR
  HEAD_TEACHER
  TEACHER
  DATA_ENTRY
  MEDIA

}
